@model Persona
@{
    string urlVolverAtras = "https://localhost:7174/Home/IndexLogueado2?idLogueado=" + @Model.Id;
}

@using(Html.BeginForm("CreateTurno", "Turnos", FormMethod.Post)){ //Form para crear Turno

    <form action="/Turnos/CreateTurno" method="post" style="background-color:white; padding-left:2%; padding-bottom:2%; padding-top:2%; padding-right:2%; border-radius:20px">
        
        <div style="text-align:center">
            <h1>Pedir Turno</h1>
        </div>
        
        <div class="row">
            <label><b>Paciente</b></label>
            <input type="text" name="pacienteId" value="@Model.Id" hidden/>
            <input type="text" value="@Model.Nombre @Model.Apellido" disabled/>
        </div>

        <div class="row">
            <label><b>Dni</b></label>
            <input type="text" value="@Model.Dni" disabled/>
        </div>
        
        <div class="row">
            <label><b>Fecha del turno</b></label>
            <input type="datetime-local" name="fechaHora" required/>
        </div>

        <div class="row">
            <label><b>Prestación</b></label>
            <select name="prestacion" id="prestacion_seleccion">
                <option value="@TipoPrestacion.ClinicaMedica">Clinica Médica</option>
                <option value="@TipoPrestacion.Kinesiología">Kinesiología</option>
                <option value="@TipoPrestacion.Oculista">Oculista</option>
                <option value="@TipoPrestacion.Odontología">Odontología</option>
            </select>
        </div>

        <div class="row">
            <input type="radio" name="activo" style="display:none" checked/>
        </div>

        <div class="container">
          <div class="row" style="margin-top:30px;">
              <div class="col-10">
                  <button type="submit" style="width:100%;" class="btn btn-success">Crear turno</button>
              </div>
              <div class="col-2">
                  <a href="@urlVolverAtras" style="width:100%;" class="btn btn-success">Volver atras</a>
              </div>
           </div>          
      </div> 
  
    </form>
 }
