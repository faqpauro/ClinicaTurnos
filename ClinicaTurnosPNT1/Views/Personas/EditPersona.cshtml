@model Persona
@{
    //UPDATE - EDITAR PERSONA
}

<div style="text-align:center">
    <h1>Editar Persona</h1>
</div>

<div class="container" style="background-color:white; padding-left:2%; padding-bottom:2%; padding-top:2%; padding-right:2%; border-radius:20px">
    <form asp-action="Update">

    <div>
        <input asp-for="Id" style="display:none"/>
    </div>

    <div class="row">
        <b>Nombre</b>
        <input type="text" asp-for="Nombre" placeholder="Editar nombre" required/>
    </div>

    <div class="row">
        <b>Apellido</b>
        <input type="text" asp-for="Apellido" placeholder="Editar apellido" required/>
    </div>

    <div class="row">
        <b>Dni</b>
        <input type="number" asp-for="Dni" placeholder="Editar dni" required/>
    </div>

    <div class="row">
        <b>Email</b>
        <input type="email" asp-for="Email" placeholder="Editar email" required/>
    </div>

    <div class="row">
        <b>Password</b>
        <input asp-for="Password" placeholder="Editar password" required/>
    </div>

    <div class="row">
        <b>Telefono</b>
        <input type="tel" asp-for="Telefono" placeholder="Editar telefono" required/>
    </div>

    <div class="row">
        <b>Direccion</b>
        <input asp-for="Direccion" placeholder="Editar direccion" required/>
    </div>

    <div class="row">
        <b>Tipo</b>
        <input asp-for="tipo" readonly/>
    </div>

    <div class="container">
          <div class="row" style="margin-top:30px;">
              <div class="col-10">
                  <button type="submit" style="width:100%;" class="btn btn-success">Modificar persona</button>
              </div>
              <div class="col-2">
                  <a asp-action="ListarPersonas" asp-controller="Personas" style="width:100%;" class="btn btn-success">Volver atras</a>
              </div>
           </div>          
      </div>   
  
  
    </form>       
</div>

